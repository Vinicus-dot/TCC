@using SPCPP.Model.Enums
@using SPCPP.Model.Models
@model User
@{

    ViewData["Title"] = "Editar usuário";
}

<div class="text-center">

    <h1 class=display-4>Editar usuário</h1>

</div>

<form asp-controller="User" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(p => p.Nome)
    </div>
    <br />

    <div class="form-group">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
        @Html.ValidationMessageFor(p => p.Email)
    </div>
    <br />

    <div class="form-group">
        <label for="nome" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(p => p.Login)
    </div>
    <br />

    <div class="form-group">
        <label for="nome" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(p => p.Perfil)
    </div>
    <br />

    <button type="submit" class="btn btn-primary btn-block w-100 mb-3">Editar</button>
    <a role="button" class="btn btn-secondary btn d-block" asp-controller="User" asp-action="Index">Voltar</a>
</form>