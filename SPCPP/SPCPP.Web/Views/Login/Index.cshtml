@using SPCPP.Model.Models
@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}
@if (TempData["MensagemErro"] != null)
{
           <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
           </div>
}

@if (TempData["MensagemSucesso"] != null)
{
           <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
           </div>
}

<section class="vh-75"style="margin-top: 150px" >
    
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-controller="Login" asp-action="Entrar" method="post">  
                    <h1 class="log-in-title title ng-binding" style="margin-bottom: 30px;">Login</h1>

                    <div class="mb-3">
                        <input type="text" asp-for="Login" class="form-control form-control-lg" id="login" placeholder="Login" />
                        
                        @Html.ValidationMessageFor(p => p.Login)
                    </div>
                    <div class="mb-3">

                        <input type="password" asp-for="Senha" class="form-control form-control-lg" id="Senha" placeholder="Senha" />
                        
                        @Html.ValidationMessageFor(p => p.Senha)
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" asp-for="lembrar"  type="checkbox" value="true" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Lembrar de mim
                            </label>
                        </div>
                        <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold" >Redefinir minha senha</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem; border-radius: 30px;">
                            Entrar
                        </button>
                        
                    </div>

                </form>
            </div>
        </div>
    </div>
    
</section>