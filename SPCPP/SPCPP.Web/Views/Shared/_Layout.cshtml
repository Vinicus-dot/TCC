<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SPCPP.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PagedList.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SPCPP.Web.styles.css" asp-append-version="true" />
</head>
<body>
    

    <header>
        <nav class="sidenav">
            <div >
                <a class="" asp-area="" asp-controller="Home" asp-action="Index">SPCPP</a>
                
                <div class=" justify-content-between">
                    <ul class=" flex-grow-1 ">
                        <li class="">
                            <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="">
                            <a class="" asp-area="" asp-controller="Professor" asp-action="Index">Professor</a>
                        </li>
                        <li class="">
                            <a class="" asp-area="" asp-controller="Posgraduacao" asp-action="Index">Posgraducao</a>
                        </li>
                        <li class="">
                            <a class="" asp-area="" asp-controller="User" asp-action="Index">User</a>
                        </li>
                        <li class="">
                            <a class="" asp-area="" asp-controller="Perfil" asp-action="Editar">Editar meu Perfil</a>
                        </li>
                        <li class="">
                            <a class="" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

        <div class="container">
        <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SPCPP.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
