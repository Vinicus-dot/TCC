@using SPCPP.Model.Enums
@model SPCPP.Model.Models.Request.ProfessorRequest

@{
    ViewData["Title"] = "Criar Professor";
}

<div class="text-center">

    <h1 class=display-4>Cadastrar Professor</h1>

</div>

<form asp-controller="Professor" asp-action="Create" method="post">
    <div class="form2Content">
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do professor">
        @Html.ValidationMessageFor(p => p.Nome)
    </div>
   

    <div class="form-group">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do professor">
        @Html.ValidationMessageFor(p => p.Email)
    </div>
    </div>
    <br />
    <div class="form2Content">
    <div class="form-group">
        <label for="nome" class="form-label">Login (SIAPE)</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do professor">
        @Html.ValidationMessageFor(p => p.Login)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do professor">
        @Html.ValidationMessageFor(p => p.Senha)
    </div>
    </div>
    <br />
    <div class="form2Content">
    <div class="form-group">
        <label for="nome" class="form-label">Nome Completo</label>
        <input type="text" asp-for="Cnome" class="form-control" placeholder="Digite o nome completo do professor">
        @Html.ValidationMessageFor(p => p.Cnome)
    </div>
    <br />

    <div class="form-group">
        <label for="nome" class="form-label">Lotação</label>
        <input type="text" asp-for="Lotacao" class="form-control" placeholder="Digite a lotação do professor">
        @Html.ValidationMessageFor(p => p.Lotacao)
    </div>
    </div>
    <br />
    <div class="form3Content">
    <div class="form-group">
        <label for="nome" class="form-label">Data de Nascimento</label>
        <input type="date" asp-for="Data_nasc" class="form-control" placeholder="Digite a data de nascimento do professor">
        @Html.ValidationMessageFor(p => p.Data_nasc)
    </div>
    <div class="form-group">
        <label for="nome" class="form-label">Carga Horária</label>
        <input type="number" asp-for="Carga_atual" class="form-control" placeholder="Digite a carga horaria do professor">
        @Html.ValidationMessageFor(p => p.Carga_atual)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Status</label>
        <input type="text" asp-for="Status" class="form-control" placeholder="Digite o status do professor">
        @Html.ValidationMessageFor(p => p.Status)
    </div>
    </div>
 
    <br/>
    

    <div class="formfooter">
    <button type="submit" class="btn btn-primary ">Adicionar</button>
    <a role="button" class="btn btn-secondary btn d-block" asp-controller="Professor" asp-action="Index">Voltar</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }