@using SPCPP.Model.Enums
@model SPCPP.Model.Models.Professor

@{
    ViewData["Title"] = "Editar Professor";
}

<div class="text-center">

    <h1 class=display-4>Editar Professor</h1>

</div>

<form asp-controller="Professor" asp-action="Editar" method="post">
    <input type="hidden" asp-for="siape" />
    <input type="hidden" asp-for="user_id" />
    <div class="form2Content">
        <div class="form-group">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do professor">
            @Html.ValidationMessageFor(p => p.Email)
        </div>
        <div class="form-group">
            <label for="nome" class="form-label">Numero Identificador Lattes</label>
            <input type="text" asp-for="numero_identificador" class="form-control" placeholder="Digite o  número identificador lattex do professor">
            @Html.ValidationMessageFor(p => p.numero_identificador)
        </div>
    </div>
    <br />
    <div class="form2Content">
        <div class="form-group">
            <label for="nome" class="form-label">Nome Completo</label>
            <input type="text" asp-for="Cnome" class="form-control" placeholder="Digite o nome completo do professor">
            @Html.ValidationMessageFor(p => p.Cnome)
        </div>

        <div class="form-group" style="weight:50px">
            <label for="nome" class="form-label">Data de Nascimento</label>
            <input type="date" asp-for="Data_nasc" class="form-control" placeholder="Digite a data de nascimento do professor">
            @Html.ValidationMessageFor(p => p.Data_nasc)
        </div>
    </div>
    <br />


    <div class="formfooter">
        <button type="submit" class="btn btn-primary ">Alterar</button>
        <a role="button" class="btn btn-secondary btn d-block" asp-controller="Professor" asp-action="Index">Voltar</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }